{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<div class="col-md-10 mx-auto col-lg-5">
    <form method="post" class="p-4 p-md-5 border rounded-3 bg-light">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectés en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

        <div class="form-floating mb-3">
            <input type="email" value="{{ last_username }}" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" autocomplete="email" required autofocus>
            <label for="floatingInput">Adresse email</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
            <label for="floatingPassword">Mot de passe</label>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me">Se souvenir de moi
            </label>
        </div>
        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
        <button class="w-100 btn btn-lg btn-primary" type="submit">Se connecter</button>
        <hr class="my-4">
        <small class="text-muted">En me connectant, j'accepte les conditions d'utilisations</small>
    </form>
  </div>

    
{% endblock %}
