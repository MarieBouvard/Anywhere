{% extends 'base.html.twig' %}

{% block title %}Liste des newsletters{% endblock %}

{% block body %}
    <h1>Liste des newsletters</h1>
    <div class="container">
        <div class="row">
            {% for newsletter in newsletters %}
            <div class="col-md-6 mb-5">
                <div class="card">
                    <div class="card-body">
                        <div class="card title">
                            {{ newsletter.name }}
                        </div>
                        {{newsletter.createdAT|date}}
                        {{newsletter.categories.name}}
                        {{newsletter.categories.users|length}}
                        {% if newsletter.isSent == false %}
                            <a href="{{ path('newsletters_send', {id: newsletter.id}) }}" class="link-dark btn btn-warning">Envoyer</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}