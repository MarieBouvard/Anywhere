<h4 class="text-center mt-5">Les nouveautés proposées </h4>
  <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
    {% for bestThreeTravel in bestThreeTravels %}
    <div class="col">
      <div
        class="card card-cover h-100 overflow-hidden text-white bg-white rounded-4 shadow-lg"
        style="background-image: url('/uploads/{{bestThreeTravel.image }}'); background-repeat: no-repeat; background-position:center; background-size: cover;">
        <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
          <h2 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">
            {{ bestThreeTravel.place }}
          </h2>
          <ul class="d-flex list-unstyled mt-auto">
            <li class="me-auto">
            </li>
            <li class="d-flex align-items-center me-3">
              <svg class="bi me-2" width="1em" height="1em">
                <use xlink:href="#geo-fill"></use>
              </svg>
              <small>Earth</small>
            </li>
            <li class="d-flex align-items-center">
              <svg class="bi me-2" width="1em" height="1em">
                <use xlink:href="#calendar3"></use>
              </svg>
              <small>{{ bestThreeTravel.time }}</small>
            </li>
          </ul>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>