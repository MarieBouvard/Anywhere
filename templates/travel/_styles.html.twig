<div class="container mb-5 mt-3">
    <div class="row justify-content-center">
        <h5 class="text-start mb-3">Les voyages préférés</h5>
        {% for t in bestThreeTravels %}
        <div class="col text-center">
            <div class="card border rounded lg-shadow mx-auto" style="background-image: url('/uploads/{{ t.image }}'); background-repeat: no-repeat; background-position:center; background-size: cover; height: 200px;">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-light text-center ">{{t.place}}</h5>
                    <a href="{{ path('app_travel_details', { 'id' : t.id }) }}" class="text-center btn btn-light text-dark mt-3">Plus d'informations</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>